{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": [
    "src/Global.d.ts"
  ],
  "typeRoots": [
    "src/Global.d.ts"
  ],
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.json",
    "json/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}